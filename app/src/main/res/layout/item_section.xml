<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <TextView
        android:pointerIcon="alias"
        android:id="@+id/name"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:text="Text"
        android:textColor="@color/colorPrimaryDark"
        android:minHeight="?android:attr/listPreferredItemHeight"
        android:drawableLeft="@drawable/ic_label_black_18dp"
        android:drawablePadding="10dp"></TextView>
    <TextView
        android:id="@+id/newestDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="16dp"
        android:text="Newest date"
        android:textColor="@color/colorAccent" />
    <TextView
        android:id="@+id/oldestDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="16dp"
        android:textColor="@color/colorAccent"
        android:text="Oldest date"/>
</LinearLayout>