<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="nytimes.chernousovaya.com.nytimes">

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/icon"
        android:label="@string/app_name"
        android:roundIcon="@drawable/icon"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <service
            android:name=".controller.service.DataService"
            android:enabled="true"></service>


        <activity
            android:name=".controller.activities.LogoActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".controller.activities.HomePageActivity"
            android:screenOrientation="portrait"></activity>
        <activity
            android:name=".controller.activities.BooksActivity"
            android:screenOrientation="portrait"></activity>
        <activity android:name=".controller.activities.FavouriteBooksActivity"
            android:screenOrientation="portrait"></activity>

        <provider
            android:authorities="app.bookscontentprovider"
            android:name=".controller.db.BooksContentProvider"></provider>
    </application>

</manifest>